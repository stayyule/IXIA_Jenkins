pipeline {
	agent any
	stages {
		stage('Test') {
			agent {
				docker {
					image 'python/robotframework'
				}
			}
			steps {
				sh 'ping -c 4 ${Chassis}'
				sh 'python -m robot --dryrun ./ixN/test_case_8_40.txt'
				sh 'python -m robot --variable chassis:${Chassis} --include traffic ./ixN/test_case_8_40.txt'

			}
		}
	}
	post {
		always {
			publishHTML (target: [
			  allowMissing: false,
			  alwaysLinkToLastBuild: false,
			  keepAll: true,
			  reportDir: '../IxNetwork simple traffic@2',
			  reportFiles: 'report.html',
			  reportName: "Simple Traffic Test Report"
			])
		}
	}
}
